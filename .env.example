# ============================================
# U-CHS Environment Configuration
# ============================================
# Copy this file to .env and fill in your team's shared credentials

# ============================================
# SUPABASE (Shared Team Database & Storage)
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_KEY=[YOUR-ANON-KEY]
SUPABASE_BUCKET=crop-images

# ============================================
# Application Security
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here

# ============================================
# Application Settings
# ============================================
PROJECT_NAME=U-CHS API
VERSION=0.1.0
DEBUG=True
LOG_LEVEL=INFO

# ============================================
# ML Models
# ============================================
MODEL_CACHE_DIR=./ml-pipeline/models
SAM_MODEL_TYPE=vit_h
USE_GPU=False
MAX_IMAGE_SIZE=1024

# ============================================
# CORS (Frontend URLs)
# ============================================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:19006","http://localhost:8081"]
