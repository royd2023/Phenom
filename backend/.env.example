# U-CHS Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=U-CHS Backend API
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development

# API Settings
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/uchs_db

# Supabase (Cloud Storage Option 1)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_BUCKET=uchs-images

# AWS S3 (Cloud Storage Option 2)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=uchs-medical-images

# ML Models Configuration
SAM_MODEL_TYPE=vit_h
SAM_CHECKPOINT_PATH=./models/sam_vit_h_4b8939.pth
GROUNDING_DINO_CONFIG_PATH=./models/GroundingDINO_SwinT_OGC.py
GROUNDING_DINO_CHECKPOINT_PATH=./models/groundingdino_swint_ogc.pth

# Image Processing
MAX_IMAGE_SIZE=10485760
IMAGE_QUALITY=95

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CUDA/GPU Settings
CUDA_VISIBLE_DEVICES=0
USE_GPU=True
